        <section class="progress-bar_wrap">
            <div class="progress-bar" title="3,693.20 raised towards the next treatment. 6 treatments funded so far.">            <span class="progress-unit" style="width: 100%;"></span>            <div class="progress-fill" style="width: 55.14%;"></div>
          </div>
        </section>

        <div class="small-12 medium-9 columns content-column">
          <header class="entry-header">
            <div class="row">
              <div class="small-12 medium-4 columns progress-bar_helper">
                <span>
                  $157 more needed
